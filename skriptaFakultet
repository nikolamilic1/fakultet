drop database if exists Fakultet;
create database Fakultet;
use Fakultet;

create table student(
    sifra int not null primary key auto_increment,
    ime varchar(50) not null,
    prezime varchar(50) not null,
    oib char(11),
    godina INT not null,
    smjer VARCHAR(50) not NULL,
    osoba int not null
);

create table rok(
    sifra int not null primary key auto_increment,
    kolegij varchar(50) not null,
    student int not null,
    datum DATETIME
);

create table kolegij(
    sifra int not null primary key auto_increment,
    naziv varchar(50) not null,
    predavac int not null
);

create table predavac(
    sifra int not null primary key auto_increment,
    ime varchar(50) not null,
    prezime varchar(50) not null,
    oib char(11),
    iban varchar(50),
    osoba int not NULL
);

create table osoba(
    sifra int not null primary key auto_increment,
    ime varchar(50) not null,
    prezime varchar(50) not null,
    oib char(11)
);

create table prijava(
    rok int NOT NULL,
    kolegij int NOT NULL
);

alter table rok add foreign key (student) references student(sifra);
alter table student add foreign key (osoba) REFERENCES osoba(sifra);
alter table predavac add foreign KEY (osoba) REFERENCES osoba(sifra);
alter table kolegij add foreign key (predavac) references predavac(sifra);
alter table prijava add foreign key (rok) REFERENCES rok(sifra);
alter table prijava add foreign key (kolegij) REFERENCES kolegij(sifra);
